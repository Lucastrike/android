<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bghall"
    tools:context="tk.lucassalinas.tanglebrain.about">

    <TextView
        android:layout_width="300sp"
        android:layout_height="450sp"
        android:background="#33b5e5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:alpha="0.5"/>

    <TextView
        android:layout_width="300sp"
        android:layout_height="450sp"
        android:text="Hi!, my name is Lucas and I'm a first year indie developer of android apps. I made this app as part of my end of year project. This is just the exciting starting point of many awesome projects in the near future!\n\n Do not hesitate in contacting me for any feedback about your experience, bugs or improvements. Your thoughts are very well appreciated!\n\n lucastrikegames@gmail.com"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:padding="15sp"
        android:id="@+id/instructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>

</RelativeLayout>
